{
  "shared_settings": {
    "strict_mode": "true",
    "aggregation_strategy_keyword": "pid_standardized_score_based",
    "remove_clients": "true",
    "dataset_keyword": "femnist_iid",
    "use_llm": "false",
    "num_of_rounds": 20,
    "num_of_clients": 40,
    "num_of_malicious_clients": 10,
    "attack_ratio": 1.0,
    "gaussian_noise_mean": 0,
    "gaussian_noise_std": 75,
    "show_plots": "false",
    "save_plots": "true",
    "save_csv": "true",
    "training_device": "cpu",
    "cpus_per_client": 1,
    "gpus_per_client": 0.0,
    "trust_threshold": 0.15,
    "reputation_threshold": 0.15,
    "beta_value": 0.75,
    "num_of_clusters": 1,
    "model_type": "cnn",
    "llm_model": "microsoft/BiomedNLP-BiomedBERT-base-uncased-abstract-fulltext",
    "llm_finetuning": "lora",
    "llm_task": "mlm",
    "llm_chunk_size": 256,
    "mlm_probability": 0.15,
    "lora_rank": 16,
    "lora_alpha": 32,
    "lora_dropout": 0.1,
    "lora_target_modules": ["query", "value"],
    "Kp": 1,
    "Ki": 0.05,
    "Kd": 0.05,
    "num_krum_selections": 3,
    "training_subset_fraction": 0.9,
    "min_fit_clients": 5,
    "min_evaluate_clients": 5,
    "min_available_clients": 5,
    "evaluate_metrics_aggregation_fn": "weighted_average",
    "num_of_client_epochs": 3,
    "batch_size": 10,
    "preserve_dataset": "true",
    "begin_removing_from_round": 2
  },
  "simulation_strategies": [
    {
      "attack_type": "label_flipping",
      "num_std_dev": 1.5,
      "adaptive_threshold": true,
      "bad_client_rate": 5
    }
  ]
}

